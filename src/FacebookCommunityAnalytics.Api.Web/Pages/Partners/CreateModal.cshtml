@page
@using FacebookCommunityAnalytics.Api.Core.Enums
@using Microsoft.AspNetCore.Mvc.Localization
@using FacebookCommunityAnalytics.Api.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IHtmlLocalizer<ApiResource> L
@model FacebookCommunityAnalytics.Api.Web.Pages.Partners.CreateModalModel
@{
    Layout = null;
}
<script>
      $(document).ready(function(){
        $("#NewPartner_PartnerUserIds").kendoMultiSelect();
      });
</script>
<form data-ajaxForm="true" asp-page="/Partners/CreateModal" autocomplete="off">
    <abp-modal size="Large">
        <abp-modal-header title="@L["NewPartner"].Value"></abp-modal-header>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
        <abp-modal-body>
            <abp-input asp-for="NewPartner.Name" label="@L["Partner.Name"].Value"/>
            <abp-input asp-for="NewPartner.Description" label="@L["Description"].Value"/>
            <abp-input asp-for="NewPartner.Url" label="@L["Url"].Value"/>
            <abp-input asp-for="NewPartner.Code" label="@L["Code"].Value"/>

            @* <abp-select asp-for="NewPartner.PartnerType" label="@L["PartnerType"].Value"/> *@
            <div class="form-group">
                <label>@L["PartnerType"]</label>
                <div class="block">
                    <select class="form-control" asp-for="NewPartner.PartnerType">
                        @foreach (var itemValue in Enum.GetValues(typeof(PartnerType)))
                        {
                            <option value="@((PartnerType)itemValue)">
                                @L[$"Enum:PartnerType:{Convert.ToInt32(itemValue)}"]
                            </option>
                        }
                    </select>
                </div>
            </div>
            <abp-input asp-for="NewPartner.IsActive" label="@L["IsActive"].Value"/>

            @* <div class="input-group"> *@
            @*     <label asp-for="NewPartner.PartnerUserIds"></label> *@
            @*     <div class="block"> *@
            @*         <select class="form-control" id="NewPartner_PartnerUserIds" name="NewPartner.PartnerUserIds" multiple="multiple"> *@
            @*             @foreach (var item in Model.PartnerUsersDtos) *@
            @*             { *@
            @*                 <option value="@item.Id">@item.DisplayName</option> *@
            @*             } *@
            @*         </select> *@
            @*     </div> *@
            @* </div> *@

        </abp-modal-body>
    </abp-modal>
</form>